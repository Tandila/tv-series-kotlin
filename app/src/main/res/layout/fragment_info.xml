<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.Info">


    <ImageView
        android:id="@+id/DetailedImage"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DetailedImage"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        >

        <TextView
            android:textAlignment="viewEnd"
            android:id="@+id/OriginTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:text="ragacaa" />

        <TextView
            android:textAlignment="viewEnd"
            android:id="@+id/releaseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:text="ragacaa123123123" />

        <TextView
            android:textAlignment="viewEnd"
            android:id="@+id/Language"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="2"
            android:text="ragacaa123123123" />

        <TextView
            android:textAlignment="viewEnd"
            android:id="@+id/Seasons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:text="18 april" />

    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>